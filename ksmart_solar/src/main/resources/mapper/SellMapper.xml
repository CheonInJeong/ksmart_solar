  		  <select id="getComponent" resultMap = "componentResultMap" parameterType="String">
				SELECT 
					c.cp_code, c.m_id, c.cp_name, c.cp_info, c.cp_maker, c.cp_makedate, c.cp_usedate, c.cp_date

				FROM 
					tb_component AS c
				left JOIN
					tb_bid_component AS b
				
				ON c.cp_code = b.cp_code
				
				WHERE 
					b_cp_code IS null 
				AND
					c.m_id = #{mId}
			 
				
