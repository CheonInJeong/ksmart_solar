					tr_payout_check='Y'
				WHERE tr_pr_code=#{trPrCode}
			  		  	
  		  </update>
  		  
  		  <insert id="addApplyPayment"  parameterType="TradePaymentOutDTO">
				  		  			
				INSERT 
				INTO 
				tb_trade_payment_out(
					tr_payout_code, 
					tr_pr_code,
					m_id, 
					tr_payout_price, 
					s_commission_rate, 
					c_trade_cm, 
					tr_payout_price_real, 
					tr_payout_bank, 
					tr_payout_account, 
					tr_payout_account_check, 
					tr_payout_account_name, 
					tr_payout_date
					)
					VALUES (
					sf_tr_payout_code(),
					 #{trPrCode}, 
					 #{mId}, 
					 #{trPayoutPrice},
					 #{sCommissionRate},
					 #{cTradeCm},
					 #{trPayoutPriceReal}, 
					 #{trPayoutBank},
					 #{trPayoutAccount},
					 'Y',
					 #{trPayoutAccountName}, 
					 NOW()
					)
				  		  
  		  </insert>
  		  
  		  
  		    <select id="getAccountInfoByNumber" resultMap = "memberAccountResultMap" parameterType="String">
